{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "target": "ES6", // The version of JavaScript the code will be compiled to
    "allowJs": true, // Allow JavaScript files to be imported
    "resolveJsonModule": true, // Allow importing JSON files
    "moduleDetection": "force", // Ensures files are treated as modules
    "isolatedModules": true, // Ensures each file can be safely transpiled without relying on other imports

    /* Strictness */
    "strict": true, // Enable all strict type-checking options
    "noUncheckedIndexedAccess": true, // Add 'undefined' to index-based access

    /* Module Resolution */
    "module": "CommonJS", // The module system for the compiled code
    "moduleResolution": "node", // How modules are found
    
    /* Output */
    "outDir": "./dist", // Where the compiled JavaScript will go
    "rootDir": "./src", // The root directory of your source files

    /* Source Maps */
    "sourceMap": true // Generate source maps for easier debugging
  },
  "include": ["src/**/*"], // Which files TypeScript should check
  "exclude": ["node_modules"] // Which files to ignore
}